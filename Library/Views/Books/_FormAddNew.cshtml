@model Library.Models.Book

<section class="card my-3">
  <div class="card-header">
    <h2 class="card-title">Create a new book</h2>
  </div>

  <div class="card-body">
    <form 
      asp-controller="Books"
      asp-action="Create"
    >
      <div class="row mb-3">
        <label 
          asp-for="Name"
          class="col-sm-2 col-form-label"
        ></label>
        <div class="col-sm-10">
          <input 
            asp-for="Name"
            class="form-control"
            required
          />
        </div>
      </div>

      <div class="row mb-3">
        <label 
          asp-for="Description"
          class="col-sm-2 col-form-label"
        ></label>
        <div class="col-sm-10">
          <input 
            asp-for="Description"
            class="form-control"
            required
          />
        </div>
      </div>

      <div class="row mb-3">
        <label 
          asp-for="DeweyDecimal"
          class="col-sm-2 col-form-label"
        ></label>
        <div class="col-sm-10">
          <input 
            asp-for="DeweyDecimal"
            class="form-control"
            required
          />
        </div>
      </div>

      <button 
        type="submit"
        class="btn btn-primary"
      >Create Book</button>
    </form>
  </div>
</section>