@model Library.ViewModels.RegisterViewModel

<h2>Register a new user</h2>
<hr />

<form
  asp-controller="Account" 
  asp-action="Register"
>
  <div class="row mb-2">
    <label 
      class="col-sm-2 col-form-label" 
      asp-for="Email"
    ></label>
    <div class="col-sm-10">
      <input class="form-control" asp-for="Email" />
    </div>
  </div>

  <div class="row mb-2">
    <label 
      class="col-sm-2 col-form-label" 
      asp-for="Username"
    ></label>
    <div class="col-sm-10">
      <input class="form-control" asp-for="Username" />
    </div>
  </div>

  <div class="row mb-2">
    <label 
      class="col-sm-2 col-form-label" 
      asp-for="Password"
    ></label>
    <div class="col-sm-10 position-relative">
      <input class="form-control" asp-for="Password" />

      <partial name="Components/PasswordToggleButton" />
    </div>
  </div>

  <div class="row mb-2">
    <label 
      class="col-sm-2 col-form-label" 
      asp-for="ConfirmPassword"
    ></label>
    <div class="col-sm-10 position-relative">
      <input class="form-control" asp-for="ConfirmPassword" />

      <partial name="Components/PasswordToggleButton" />
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Register</button>
</form>